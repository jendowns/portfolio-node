extends layout.pug

block content
	header
		.container
			h1 Jen Downs
			h2 front end developer
			ul.social-icons
				li
					a(href='https://twitter.com/jenisora', target='_blank', title='Twitter')
						i.icon.icon-twitter(aria-hidden="true")
						span.screen-reader Twitter
				li
					a(href='https://codepen.io/jendowns', target='_blank', title='Codepen')
						i.icon.icon-codepen(aria-hidden="true")
						span.screen-reader Codepen
				li
					a(href='https://github.com/jendowns', target='_blank', title='GitHub')
						i.icon.icon-github(aria-hidden="true")
						span.screen-reader GitHub
				li
					a(href='https://keybase.io/jeni', target='_blank', title='Keybase.io')
						i.icon.icon-key(aria-hidden="true")
						span.screen-reader jeni on Keybase.io
	section#me
		.container
			.flex-grid
				.me__desc
					p <span>Hello there! üëã </span>
					p <span>I'm a front end developer in Austin, TX. ‚òÄÔ∏è </span>
					p <span>I use <a href="https://www.ibm.com/design/language/experience/front-end/fundamentals/">code as a design tool</a> ‚ú® to create compelling &amp; delightful digital experiences. üíñ</span>
	section#projects
		.container
			h2 Projects
			.grid
				each project in projectEntries
					.project__window
						.window__wrapper
							.window__toolbar
								.window__button
								.window__button
								.window__button
							.window__pic(style="background-image: url("+project.fields.projectPreview.fields.file.url+"); background-size: cover; background-position: top left;")
								span.screen-reader Screenshot of !{project.fields.projectTitle} website.

	section#posts
		.container
			h2 Posts &amp; Tutorials
			.flex-grid
				each post in blogEntries
					article
						a(href=post.fields.slug)
							h3 #{post.fields.title}
						p
							small  #{post.fields.datePublished}
						| !{post.fields.excerpt}
						p
							a(href=post.fields.slug) Read More

				//- This is an external post & therefore isn't saved in Contentful
				article
					a(href='/wordpress-sidebar', target='_blank')
						h3 Creating a Sidebar of Categories and Posts in WordPress
					p
						small October 20, 2016
					p I wrote about using PHP to generate a side navigation menu, with categories as dropdown triggers and posts as dropdown list items.
					p
						a(href='/wordpress-sidebar', target='_blank')
							| Read More &nbsp;
							i.icon.icon-open(aria-hidden="true")
								
				//- This is an external post & therefore isn't saved in Contentful
				article
					a(href='/unity-arcade-game', target='_blank')
						h3 2D Arcade Game in JavaScript with Unity 5
					p
						small April 1, 2016
					p
						| Using the Unity 5 engine, I made a 2D arcade game. And it's written in JavaScript! (Well, Unity's flavor of JavaScript.) I wrote an article for
						a.text-link(href="https://recompilermag.com/", target="_blank")  The Recompiler 
						| about how I made this game.
					p
						a(href='/unity-arcade-game', target='_blank')
							| Read More &nbsp;
							i.icon.icon-open(aria-hidden="true")

	section#about
		.container
			h2 About this site
			p I built this site using <strong>Node.js + Express</strong> with <strong>SCSS</strong> &amp; <strong>Pug</strong> templating language, and I'm using <strong>Contentful's RESTful JSON API</strong> to deliver my blog posts and project previews. 
			p.center <a class="button" href="https://github.com/jendowns/portfolio-node" target="_blank">View Code on Github <i class="icon-github" aria-hidden="true"></i></a>


	footer
		.container
			.flex-grid
				ul
					li
						small#copyright &copy; Jen Downs 
					li
						small Made with 
							i.icon.icon-heart
							span.screen-reader love 
							|  in Austin, TX.

				ul.social-icons
					li
						a(href='https://twitter.com/jenisora', target='_blank', title='Twitter')
							i.icon.icon-twitter(aria-hidden="true")
							span.screen-reader Twitter
					li
						a(href='https://codepen.io/jendowns', target='_blank', title='Codepen')
							i.icon.icon-codepen(aria-hidden="true")
							span.screen-reader Codepen
					li
						a(href='https://github.com/jendowns', target='_blank', title='GitHub')
							i.icon.icon-github(aria-hidden="true")
							span.screen-reader GitHub
					li
						a(href='https://keybase.io/jeni', target='_blank', title='Keybase.io')
							i.icon.icon-key(aria-hidden="true")
							span.screen-reader jeni on Keybase.io

